            <div class="col-md-2">
                <div class="form-group">
                    <label>Fat Percentage </label>
                    <input name="[0].fatPercentage" class="form-control" value="@Model[0].fatPercentage" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Animal Weight </label>
                    <input name="[0].animalWeight" class="form-control" value="@Model[0].animalWeight" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Category  </label>
                    @Html.DropDownList("[0].species", Model[0].animalCategories, "Select", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-12">
                <h2>Feed</h2>
            </div>
            <div class="col-md-4">
                <div class="form-group">
