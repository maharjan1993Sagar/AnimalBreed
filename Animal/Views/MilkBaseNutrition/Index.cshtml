@model IEnumerable<Animal.Models.MIlkBaseNutrition>

@{
    ViewData["Title"] = "Index";
}
<div class="card mb-4">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Milk Base Nutrition</h3>
    </div>
    <div class="card-body">

        <p>
            <a asp-action="AddEditMilk" class="btn btn-outline-primary">Create New</a>
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                    @*<th>
                        @Html.DisplayNameFor(model => model.id)
                    </th>*@
                    <th>
                       Species Name
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.fatPercentage)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.weight)
                    </th>*@
                    <th>
                       DM
                    </th>
                    <th>
                       SNF
                    </th>
                    <th>
                       DP
                    </th>
                    <th>
                       CP
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.tdn)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ndf)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.c)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.p)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Species.speciesName)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.fatPercentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.weight)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.dm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.snf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cp)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.tdn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ndf)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.c)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.p)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "AddEditMilk", new { id = item.id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info" }) |

                            @Html.ActionLink("Delete", "DeleteMilk", new { id = item.id }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("body div.myTable input");
            var dataSrc = [];
            var table = $("#myTable").DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ],
                "pageLength": 50,
            });
        });
    </script>
}
