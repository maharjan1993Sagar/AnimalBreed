@model Animal.Models.MilkRecordVM

@{
    ViewData["Title"] = "AddEditMilk";
}

<div class="card">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Milk Record</h3>
    </div>
    <div class="card-body">
        @Html.HiddenFor(m => m.id)

        <form asp-action="AddEditMilk">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="milkingStatus" class="control-label"></label>
                        <select asp-for="milkingStatus" class="form-control">
                            <option disabled selected>select  status</option>
                            <option value="Milking">Milking</option>
                            <option value="Dry Off">Dry Off</option>
                           
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="recordingPeriod" class="control-label"></label>
                        
                        <select asp-for="recordingPeriod" class="form-control" id="trigger-dp" >
                            <option disabled selected>select Recording Period</option>
                            <option value="Morning">Morning</option>
                            <option value="Noon">Noon</option>
                            <option value="Evening">Evening</option>
                        </select>
                        </div>
                        <span asp-validation-for="recordingPeriod" class="text-danger"></span>
                    </div>
        

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="recordingDate" class="control-label"></label>
                        <input asp-for="recordingDate" class="form-control" />
                        <span asp-validation-for="recordingDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="milkVolume" class="control-label"></label>
                        <input asp-for="milkVolume" class="form-control" />
                        <span asp-validation-for="milkVolume" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="milkSampleBoxNo" class="control-label"></label>
                        <input asp-for="milkSampleBoxNo" class="form-control" />
                        <span asp-validation-for="milkSampleBoxNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="labId" class="control-label"></label>
                        <input asp-for="labId" class="form-control" />
                        <span asp-validation-for="labId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="testingCharge" class="control-label"></label>
                        <input asp-for="testingCharge" class="form-control" />
                        <span asp-validation-for="testingCharge" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="receiptNo" class="control-label"></label>
                        <input asp-for="receiptNo" class="form-control" />
                        <span asp-validation-for="receiptNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="genericProblem" class="control-label"></label>
                        <input asp-for="genericProblem" class="form-control" />
                        <span asp-validation-for="genericProblem" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="vacination" class="control-label"></label>
                        <input asp-for="vacination" class="form-control" />
                        <span asp-validation-for="vacination" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="shortNote" class="control-label"></label>
                        <input asp-for="shortNote" class="form-control" />
                        <span asp-validation-for="shortNote" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label  class="control-label">Ear tag Number</label>

                        @Html.DropDownList("animalRegistrationid", Model.animals, "Select", new { @class = "form-control" })
                        <span asp-validation-for="animalRegistrationid" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="fatPercentage" class="control-label"></label>
                        <input asp-for="fatPercentage" class="form-control" />
                        <span asp-validation-for="fatPercentage" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="snf" class="control-label"></label>
                        <input asp-for="snf" class="form-control" />
                        <span asp-validation-for="snf" class="text-danger"></span>
                    </div>
                </div>




            <div class="col-md-12" style="text-align:center; padding-top:15px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
                </div>
        </form>
    </div>



    <div>
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
