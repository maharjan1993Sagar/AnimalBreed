@model IEnumerable<Animal.Models.keeper>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mb-4">
    <div class="card-header py-3">
        <h3 class="m-1 font-weight-bold center text-primary">Keeper</h3>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="AddEditKeeper" class="btn btn-outline-primary">Create New</a>
        </p>
        <table class="table table-bordered" id="myTable">
            <thead>
                <tr>
                   
                    @*<th>
                        @Html.DisplayNameFor(model => model.category)
                    </th>*@
                    <th>
                       Full name
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.occupation)
                    </th>
                    <th>
                        Address
                    </th>
                   
                    <th>
                        Farm
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                     
                        @*<td>
                            @Html.DisplayFor(modelItem => item.category)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.fullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.occupation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.address)
                        </td>
                      
                        <td>
                            @Html.DisplayFor(modelItem => item.farm.orgtanizationName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "AddEditKeeper", new { id = item.id }, new { @class="btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new {  id=item.id }, new { @class = "btn btn-info" }) |
                            @Html.ActionLink("Delete", "Delete", new { id=item.id}, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("body div.myTable input");
            var dataSrc = [];
            var table = $("#myTable").DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 3 }
                ],
                "pageLength": 50,
            });
        });
    </script>
}



