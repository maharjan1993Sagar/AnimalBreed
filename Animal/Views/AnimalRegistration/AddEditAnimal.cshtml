@section Scripts{
    <script>
        function CheckEarTag() {
            var status = true;
            var ear = $("#txtEarTag").val();
            if (ear != null) {
                $.ajax({
                    async: false,
                    type: "POST",
                    dataType: "json",
                    //data: "{'earTag':'" + ear + "'}",
                    contentType: "application/json; charset=utf-8",
                    url: RootUrl + 'Request/CheckEarTag?earTag=' + ear,
                    success: function (response) {
                        if (response.toString() == "NULL") {
                            status = false;
                        }
                    }
                })
            }
            return status;
        }

        $(document).ready(function () {

            $("#txtEarTag").change(function () {
                if (!CheckEarTag()) {
                    alert("Ear Tag doesnot generated yet or invalid.");
                }
            })

            $("#txtSubmit").click(function (e) {
                if (!CheckEarTag()) {
                    alert("Ear Tag doesnot generated yet or invalid.");
                    e.preventDefault();
                }
            })

               
        })
  
    </script>
    }


